source 'https://rubygems.org'
ruby '2.2.0'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 4.2.0'

# To make sure readline is available
gem 'rb-readline'

# Use postgresql as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0.1'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# To make sprockets work
gem 'sprockets'

# To annotate models, tests, factories etc
gem 'annotate'

# For using intro.js with the assest pipeline
 gem 'introjs-rails'

# For realtime messaging between the server and the client
 gem 'pusher'
 gem 'pusher-client'

# For authentication
gem 'oauth2'
gem 'simple_oauth'
gem 'omniauth'
gem 'omniauth-clef'
gem 'omniauth-evernote'
gem 'omniauth-facebook'
gem 'omniauth-fitbit'
gem 'omniauth-github'
gem 'omniauth-instagram'
gem 'omniauth-instapaper'
gem 'omniauth-lastfm'
gem 'omniauth-moves'
gem 'omniauth-pocket'
gem 'omniauth-rdio'
gem 'omniauth-runkeeper'
gem 'omniauth-twitter'

# For API integration
gem 'fitgem'
gem 'twitter'
gem 'octokit', '~> 2.0'
gem 'koala', '~> 1.8.0rc1'
gem 'evernote_oauth'
gem 'instapaper'
gem 'moves'
gem 'health_graph'
gem 'pocket-ruby', git: 'https://github.com/launsh/pocket-ruby.git'

# For user profiles and profile images
gem 'devise'
gem 'gravtastic'

# For background tasks
gem 'rufus-scheduler'

# For HTTP requests
gem 'httparty'

# For front-end
gem 'neat'
gem 'haml-rails'

# For chaning erb to haml
gem 'html2haml'

# For setting up OAuth with the API
gem 'doorkeeper'

# For Heroku monitoring
gem 'newrelic_rpm'

# For running jobs in the background and viewing them running
gem 'sidekiq'
gem 'sinatra', '>= 1.3.0', :require => nil
gem 'devise-async'

# Web server
gem 'unicorn'

# For starting web and worker from procfile
gem 'foreman'

# For storing environment variables
gem 'figaro', '~> 1.0.0'

# For testing for security vulnerabilities
gem 'brakeman'

# For reporting errors
gem 'rollbar'


group :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'cucumber-rails', :require => false
  gem 'database_cleaner'
  gem 'webmock'
  gem 'vcr'
  gem 'factory_girl_rails', '~> 4.0'
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
  gem 'rails_12factor'
end

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
end


