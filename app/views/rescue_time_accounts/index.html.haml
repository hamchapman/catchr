%div.circle-logo-lg.rescuetime-logo-circle
%div.page-header.service-account-management-header
  Rescue Time Accounts

%div.add-service-account-btn
  = link_to 'Add Account', '/users/auth/rescuetime', class: 'btn'
%div
  - @accounts.each do |account|
    = form_for [current_user, account] do |f|
      %table.service-account-table
        %tr
          %td.service-account-table-label
            %b
              Key
          %td.service-account-table-value
            %div.account-name
              = account.key
        - if current_user.public
          %tr
            %td.service-account-table-label
              %b
                = f.label :public
            %td.service-account-table-value
              = f.check_box :public
        %tr
          %td.service-account-table-label
            %b
              = f.label :activated
          %td.service-account-table-value
            = f.check_box :activated

      %div
        = f.submit 'Update Account', class: 'btn'


    %div.account-management-buttons
      %div
        = link_to 'Delete Account', user_rescue_time_account_path(@user, account), confirm: 'Are you really, completely sure?', method: :delete, class: 'btn'