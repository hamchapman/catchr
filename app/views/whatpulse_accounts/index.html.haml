%h4
  Whatpulse Accounts
%div
  = link_to 'Add Account', '/users/auth/whatpulse'
- @accounts.each do |account|
  %div.account-name
    = account.username
  %div.account-info
    %div.account-form
      = form_for [current_user, account] do |f|
        %div
          = f.label :username
          = f.text_field :username
        %div
          = f.label :public
          = f.check_box :public
        %div
          = f.label :activated
          = f.check_box :activated
        %div
          = f.submit 'Update Account'
    %div
      = link_to 'Delete Account', user_whatpulse_account_path(@user, account), confirm: 'Are you really, completely sure?', method: :delete
