%div.circle-logo-lg.instapaper-logo-circle
%div.page-header.service-account-management-header
  Instapaper Accounts

%div.add-service-account-btn
  = link_to 'Add Account', user_instapaper_accounts_path(@user), method: :post
%div
  - @accounts.each do |account|
    = form_for [current_user, account] do |f|
      %table.service-account-table
        %tr
          %td.service-account-table-label
            %b
              Name
          %td.service-account-table-value
            %div.account-name
              = account.name
        - if current_user.public
          %tr
            %td.service-account-table-label
              %b
                = f.label :public
            %td.service-account-table-value
              = f.check_box :public
        %tr
          %td.service-account-table-label
            %b
              = f.label :activated
          %td.service-account-table-value
            = f.check_box :activated

      %div
        = f.submit 'Update Account', class: 'btn'


    %div.account-management-buttons
      %div
        = link_to 'Reauthorize Account', '/users/reauth/instapaper?' + { id: account.id }.to_param, method: :post, class: 'btn'
      %div
        = link_to 'Delete Account', user_instapaper_account_path(@user, account), confirm: 'Are you really, completely sure?', method: :delete, class: 'btn'