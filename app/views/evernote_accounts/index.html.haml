%h4
  Evernote Accounts
%div
  = link_to 'Add Account', user_evernote_accounts_path(@user), method: :post
- @accounts.each do |account|
  %div.account-name
    = account.username
  %div.account-info
    %div.account-form
      = form_for [current_user, account] do |f|
        - if current_user.public
          %div
            = f.label :public
            = f.check_box :public
        %div
          = f.label :activated
          = f.check_box :activated
        %div
          = f.submit 'Update Account'
    %div
      = link_to 'Delete Account', user_evernote_account_path(@user, account), confirm: 'Are you really, completely sure?', method: :delete
    %div
      = link_to 'Reauthorize Account', '/users/reauth/evernote?' + { id: account.id }.to_param, method: :post
